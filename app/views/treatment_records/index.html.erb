<div class="reservations-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="reservations-index-single">
          <h2 class="text-center text-white">カルテ一覧</h2>
          <h3 class="text-center text-white"><%= @customer.name_kana %>様</h3>

          <% @customer.reservations.each do |reservation| %>
            <p class="text-white"><%= link_to reservation.reservation_date, treatment_record_path(id: reservation.treatment_record.id) %></p>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
