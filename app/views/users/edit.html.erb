<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-gray title">ユーザー情報編集</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-gray' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-gray' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-gray' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-gray' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.check_box :admin , {} %>
            <label class="text-gray">管理者権限を付与する</label>
          </div>
          <%= f.submit "登録", class: 'btn-block btn-gray' %>
        <% end %>
        <%= link_to "ユーザー情報削除", user_path(id: @user.id), method: :delete, data:{confirm:"本当にユーザー情報を削除しますか？"} %>
      </div>
    </div>
  </div>
</div>
