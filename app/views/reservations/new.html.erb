<div class="guests-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 guests-new-container">
        <h1 class="text-center text-gray">次回予約フォーム<h1>
          
          <h2 class="text-center text-gray"><%= @customer.name_kana %>様</h2>
          <%= form_for @reservation do |f| %>
           <div class="form-group">
             <%= f.label :reservation_date, "予約日", class: 'text-gray' %>
             <%= f.date_field :reservation_date, class: 'form-control' %>
           </div>
           <div class="form-group">
             <%= f.label :reservation_time, "予約時間", class: 'text-gray' %>
             <%= f.time_field :reservation_time, class: 'form-control' %>
           </div>
           <div>
             <%= f.label :note, "メモ", class: 'text-gray' %>
             <%= f.text_field :note, class: 'form-control' %>
           </div>
            <%= f.hidden_field :customer_id, value: @customer.id %>
           　<%= f.submit "登録", class: 'btn-block btn-gray' %>
          　 <% end %>

      </div>
    </div>
  </div>
</div>
