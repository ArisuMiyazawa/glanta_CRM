<div class="reservations-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="reservations-index-single">
          <h2 class="text-white">予約一覧</h2>
　　　　　　<h3 class="text-white">名前検索</h3>
            <div class="search-form">
              <%=form_tag(reservations_path, method: :get) do %>
                <%= text_field_tag :search %>
                <%= submit_tag 'Search', name: nil %>
              <% end %>
            </div>
            <table>
             <tbody>
              <% @reservations.each do |reservation| %>
                <tr>
                  <td class="text-white"><%= reservation.reservation_date %></td>
                  <td class="text-white"><%= reservation.reservation_time %></td>
                  <td class="text-white"><%= reservation.note %></td>
                  <% reservation_customer = reservation.customer %>
                  <td class="text-white"><%= link_to reservation_customer.name_kana, customer_path(reservation_customer.id) %></td>
                </tr>
              <% end %>
           </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
