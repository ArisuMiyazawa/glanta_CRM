<div class="customers-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 customers-new-container">
        <h1 class="text-center text-gray title">予約確認</h1>
         <div class="text-center text-gray subtitle">
         <%= @customer.name_kana %>様
         </div>
         <div class="text-center text-gray">
         <%= @reservation.reservation_date %>
         </div>
         <div class="text-center text-gray">
         <%= @reservation.reservation_time.strftime('%H:%M') %>
         </div>
         <div class="text-center text-gray">
         <%= @reservation.note %>
         </div>
          <%= link_to "予約変更", edit_reservation_path(customer_id: @customer.id) %>
          <%= link_to "予約取消", reservation_path(id: @reservation.id), method: :delete, data:{confirm:"本当に予約を取り消しますか？"} %>
          <%= link_to "カルテ作成", new_treatment_record_path(customer_id: @customer.id, reservation_id: @reservation.id) %>
          <%= link_to "次回予約", new_reservation_path(customer_id: @customer.id) %>
      </div>
    </div>
  </div>
</div>
